<div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Curriculum</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="/curriculum">Curriculum</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <!-- Card header -->
          <div class="card-header border-0">
            <h3 class="mb-0">Light table</h3>
          </div>
          <!-- Light table -->
          <div class="table-responsive">
            <div class="container-fluid my-3">
                <form action="/curriculum/update" method="post" >
                    
                    <div class="form-group">
                        <label for="" class="form-label">curriculum name</label>
                      <div class="input-group input-group-merge input-group-alternative mb-3">
                        <input type="hidden" name="curriculum_id" value="<%= curriculum_id %>">
                        <input name="curriculum_name" class="form-control" placeholder="curriculum name" value="<%= curriculum_name %>" type="text" required>
                      </div>
                    </div>
                    <div class="card-header border-0 px-0">
                      <h3 class="mb-0">Specify Credit each type</h3>
                    </div>
                    <% 
                    let types_credit = [];
                    for (var i = 0; i < curriculum.length; i++){
                        types_credit[i] = curriculum[i].total_credit;
                    }
                    %>
                    <div class="form-group">
                      <label for="" class="form-label">Basic Engineer</label>
                    <div class="input-group input-group-merge input-group-alternative mb-3">
                      <input name="type_1" class="form-control" placeholder="amount of credit" value="<%= types_credit[0] %>" type="text" required>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="" class="form-label">Basic</label>
                  <div class="input-group input-group-merge input-group-alternative mb-3">
                    <input name="type_2" class="form-control" placeholder="amount of credit" value="<%= types_credit[1] %>" type="text" required>
                  </div>
                </div>
                <div class="form-group">
                  <label for="" class="form-label">Selective</label>
                <div class="input-group input-group-merge input-group-alternative mb-3">
                  <input name="type_3" class="form-control" placeholder="amount of credit" value="<%= types_credit[2] %>" type="text" required>
                </div>
              </div>
              <div class="form-group">
                <label for="" class="form-label">GenEd Basic</label>
              <div class="input-group input-group-merge input-group-alternative mb-3">
                <input name="type_4" class="form-control" placeholder="amount of credit" value="<%= types_credit[3] %>" type="text" required>
              </div>
            </div>
            <div class="form-group">
              <label for="" class="form-label">GenEd Language</label>
            <div class="input-group input-group-merge input-group-alternative mb-3">
              <input name="type_5" class="form-control" placeholder="amount of credit" value="<%= types_credit[4] %>" type="text" required>
            </div>
          </div>
          <div class="form-group">
            <label for="" class="form-label">GenEd Personal and Professional, Management and Leadership</label>
          <div class="input-group input-group-merge input-group-alternative mb-3">
            <input name="type_6_7" class="form-control" placeholder="amount of credit" value="<%= types_credit[5] %>" type="text" required>
          </div>
        </div>
        <div class="form-group">
          <label for="" class="form-label">GenEd Engineer</label>
        <div class="input-group input-group-merge input-group-alternative mb-3">
          <input name="type_8" class="form-control" placeholder="amount of credit" value="<%= types_credit[6] %>" type="text" required>
        </div>
      </div>
      <div class="form-group">
        <label for="" class="form-label">Free</label>
      <div class="input-group input-group-merge input-group-alternative mb-3">
        <input name="type_9" class="form-control" placeholder="amount of credit" value="<%= types_credit[7] %>" type="text" required>
      </div>
    </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary mt-4">Update</button>
                    </div>
                  </form>
            </div>
          </div>
          <!-- Card footer -->

        </div>
      </div>
    </div>
    <!-- Dark table -->
    <!-- Footer -->
  </div>