                      </a>
                      <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                        <a class="dropdown-item" href="/curriculum/edit/<%= curriculums[i].curriculum_id %>">Edit</a>
                        <a class="dropdown-item" href="/curriculum/delete/<%= curriculums[i].curriculum_id %>">Delete</a>
                      </div>
                    </div>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
