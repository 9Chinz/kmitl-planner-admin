<div class="header bg-primary pb-6">
    <div class="container-fluid">
      <div class="header-body">
        <div class="row align-items-center py-4">
          <div class="col-lg-6 col-7">
            <h6 class="h2 text-white d-inline-block mb-0">Gened</h6>
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
              <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i></a></li>
                <li class="breadcrumb-item"><a href="/gened">Gened</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Page content -->
  <div class="container-fluid mt--6">
    <div class="row">
      <div class="col">
        <div class="card">
          <!-- Card header -->
          <div class="card-header border-0">
            <h3 class="mb-0">Light table</h3>
          </div>
          <!-- Light table -->
          <div class="table-responsive">
            <div class="container-fluid my-3">
                <form action="/gened/update" method="post" >
                    <div class="form-group">
                        <label for="" class="form-label">subject id</label>
                      <div class="input-group input-group-merge input-group-alternative mb-3">
                        <input name="fake_subject_id" class="form-control" placeholder="Subject ID" value="<%= subject_data.subject_id %>" type="text" disabled>
                        <input name="subject_id" value="<%= subject_data.subject_id %>" type="hidden" >
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="form-label">subject name</label>
                      <div class="input-group input-group-merge input-group-alternative mb-3">
                        <input name="subject_name" class="form-control" placeholder="Subject name" value="<%= subject_data.subject_name %>" type="text" required>
                      </div>
                    </div>
                    <div class="form-group">
                        <label for="" class="form-label">subject credit</label>
                        <div class="input-group input-group-merge input-group-alternative mb-3">
                          <input name="credit" class="form-control" placeholder="Credit" value="<%= subject_data.credit %>" type="text" required>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="" class="form-label">Type</label>
                        <select name="type" class="form-control" data-toggle="select" aria-label="Default select example" >
                            <% for(var i=3;i<types.length;i++){%>
                                <option
                                value="<%= types[i].abbreviation %>"
                                <% if(subject_data.type == types[i].abbreviation){ %>
                                    selected
                                <% } %>
                                >
                                <%= types[i].abbreviation%>
                                </option>
                            <% } %>
                          </select>
                      </div>
                    <div class="text-center">
                      <button type="submit" class="btn btn-primary mt-4">Update</button>
                    </div>
                  </form>
            </div>
          </div>
          <!-- Card footer -->

        </div>
      </div>
    </div>
    <!-- Dark table -->
    <!-- Footer -->
  </div>